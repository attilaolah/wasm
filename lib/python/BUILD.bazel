load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("//toolchains/make:configure.bzl", "configure_make_lib")

package(default_visibility = ["//:__subpackages__"])

# TODO: Missing optional dependencies:
# - Tcl/Tk

CONFIGURE_OPTIONS = [
    # keep sorted
    "--disable-shared",
    '--with-openssl="${EXT_BUILD_DEPS}/openssl_lib"',
    "--with-system-libmpdec",
]

configure_make_lib(
    name = "python",
    binaries = select({
        "//config:wasm": [],
        "//conditions:default": ["python3"],
    }),
    configure_options = select({
        ":copt": CONFIGURE_OPTIONS + [
            # TODO: Add llvm-profdata to dependencies for this to work!
            #"--enable-optimizations",
        ],
        "//conditions:default": CONFIGURE_OPTIONS,
    }),
    ignore_undefined_symbols = True,
    static_libraries = ["libpython3.9.a"],
    deps = [
        "//lib/ffi",
        "//lib/mpdecimal",
        "//lib/openssl",
        "//lib/z",
    ],
)

filegroup(
    name = "runtime",
    srcs = ["//lib/python"],
    output_group = "gen_dir",
    # TODO: Remove when this gets merged:
    # https://github.com/bazelbuild/rules_foreign_cc/pull/437
    visibility = ["//visibility:public"],
)

config_setting(
    name = "copt",
    values = {
        "compilation_mode": "opt",
    },
)

bzl_library(
    name = "package",
    srcs = ["package.bzl"],
    deps = ["//:http_archive"],
)
