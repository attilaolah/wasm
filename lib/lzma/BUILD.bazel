load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@npm//@bazel/typescript:index.bzl", "ts_library")
load("@npm//mocha:index.bzl", "mocha_test")
load("//toolchains/make:configure.bzl", "configure_make_lib")
load("//tools/wasm_library:wasm_library.bzl", "wasm_library")

package(default_visibility = ["//:__subpackages__"])

configure_make_lib(
    name = "lzma",
    configure_options = [
        "--disable-doc",
        "--disable-shared",
        "--disable-lzma-links",
        "--disable-lzmadec",
        "--disable-lzmainfo",
        "--disable-scripts",
        "--disable-xz",
        "--disable-xzdec",
    ],
)

wasm_library(
    name = "lzma_wasm",
    srcs = [":lzma_api"],
    build_settings = {
        "USE_PTHREADS": "1",
    },
    exported_functions = [
        # keep sorted
        "lzma_version_string",
    ],
    deps = [":lzma"],
)

ts_library(
    name = "lzma_api",
    srcs = ["lzma_api.ts"],
    deps = ["//tools/emscripten:types"],
)

mocha_test(
    name = "lzma_api_test",
    args = [
        "{}/lzma_api.spec.js".format(package_name()),
        "--node_options=--experimental-wasm-threads",
        "--color",
    ],
    data = [
        "lzma_api.spec.js",
        ":lzma_wasm",
        "@npm//cross-blob",
    ],
)

bzl_library(
    name = "package",
    srcs = ["package.bzl"],
    deps = ["//:http_archive"],
)
