load("//lib:defs.bzl", "dep_path")
load("//lib:lib.bzl", "package_lib")
load("//toolchains/make:configure.bzl", "configure_make_lib")
load(":package.bzl", "NAME")

package(default_visibility = ["//:__subpackages__"])

package_lib()

configure_make_lib(
    name = NAME,
    configure_options = [
        "--disable-shared",
        "--enable-static",
        '--with-gmp="{}"'.format(dep_path("gmp")),
    ],
    deps = ["//lib/gmp"],
)
