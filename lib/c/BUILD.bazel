load(":gnu_c_symbols.bzl", "gnu_c_symbols")

package(default_visibility = ["//lib:__subpackages__"])

gnu_c_symbols(
    name = "c_symbols",
    srcs = glob(["symbols/lib*.json"]),
)

sh_binary(
    name = "regenerate_symbols",
    srcs = ["regenerate_symbols.sh"],
    data = [
        "//cmd/nm_json",
        "@llvm//:nm",
    ],
    env = {
        "NM": "$(execpath @llvm//:nm)",
        "NM_JSON": "$(rootpath //cmd/nm_json)",
    },
)
