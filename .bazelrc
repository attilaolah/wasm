# CONFIG OPTIONS
#
# Allow local workspace config to select a different default :
try-import %workspace%/.bazelrc.local

# Config shorthand for wasm builds:
build:wasm --//target=wasm

# Required environment variables:
build:wasm --action_env=EM_CACHE
build:wasm --action_env=EM_CONFIG

# Using the stack protector breaks some builds.
# See https://github.com/emscripten-core/emscripten/issues/9780.
build:wasm --copt=-fno-stack-protector
