package(default_visibility = ["//visibility:public"])

filegroup(
    name = "bin",
    srcs = glob(["bin/*"]),
)

[
    filegroup(
        name = name,
        srcs = ["bin/{}".format(name)],
    )
    for name in [
        "em++",
        "emar",
        "emcc",
        "emcmake",
        "emconfigure",
        "emmake",
        "emnm",
        "emranlib",
    ]
]

filegroup(
    name = "cmake_dir",
    srcs = ["share/emscripten/cmake"],
)
